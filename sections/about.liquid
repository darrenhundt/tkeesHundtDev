{% style %}
  .about-section__heading {
    color: {{ section.settings.font_color }};
    font-size: {{ section.settings.heading_size }}px;
    margin: 0;
    font-family: 'Bebas Neue', sans-serif;
    letter-spacing: 1.5px;
    padding-bottom: 10px;
  }
  .about-section__subheading {
    color: {{ section.settings.font_color }};
    font-size: {{ section.settings.subheading_size }}px;
    margin: 0;
  }
  .about-section__container {
    /* max-width: 1600px; */
    margin: 0 auto;
    /* padding: 40px 20px; */
  }
  .about-section__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--homepage-gap);
  }
  .about-section__item {
    position: relative;
  }
  .about-section__image-wrapper {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    display: block;
  }
  .about-section__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .about-section__content {
    position: absolute;
    bottom: 0;
    /* left: 0; */
    right: 0;
    height: 100%;
    padding: 20px;
    /* background: linear-gradient(to top, rgba(0,0,0,0.7), transparent); */
    /* color: #ffffff; */
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media (max-width: 767px) {
    .about-section__heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
      padding-bottom: 4px;
    }

    .about-section__subheading {
      font-size: {{ section.settings.subheading_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="about-section">
  <div class="about-section__container">
    <div class="about-section__grid">
      {% for block in section.blocks %}
        {% if block.type == 'about_item' %}
          <div class="about-section__item" {{ block.shopify_attributes }}>
            {% if block.settings.image %}
              <a href="{{ block.settings.link }}" class="about-section__image-wrapper">
                {{
                  block.settings.image
                  | image_url: width: 600
                  | image_tag: loading: 'lazy', class: 'about-section__image'
                }}
                <div class="about-section__content">
                  {% if block.settings.heading != blank %}
                    <h2 class="about-section__heading">{{ block.settings.heading }}</h2>
                  {% endif %}
                  {% if block.settings.subheading != blank %}
                    <div class="about-section__subheading">{{ block.settings.subheading }}</div>
                  {% endif %}
                </div>
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Section",
  "settings": [
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading Size",
      "default": 32
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "min": 16,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Heading Size (Mobile)",
      "default": 24
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Subheading Size",
      "default": 18
    },
    {
      "type": "range",
      "id": "subheading_size_mobile",
      "min": 12,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Subheading Size (Mobile)",
      "default": 16
    }
  ],
  "blocks": [
    {
      "type": "about_item",
      "name": "About Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "subheading",
          "label": "Subheading",
          "default": "Subheading text goes here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Section",
      "blocks": [
        {
          "type": "about_item"
        }
      ]
    }
  ]
}
{% endschema %}
